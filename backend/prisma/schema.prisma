generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Todo {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  completed Boolean   @default(false)
  color     String?
  favorites Favorite[]

  @@map("todos")
}

model Favorite {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  todoId String @db.ObjectId
  todo   Todo   @relation(fields: [todoId], references: [id])

  @@map("favorites")
}